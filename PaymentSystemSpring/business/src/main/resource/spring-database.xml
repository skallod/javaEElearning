    <bean name="regionDS" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="org.postgresql.Driver" />
        <property name="url" value="jdbc:postgresql://localhost:5432/db1" />
        <property name="username" value="postgres" />
        <property name="password" value="12345678" />
    </bean>

    <bean name="sessionFactory" class="org.springframework.orm.hibernate5.LocalSessionFactoryBean">
        <property name="dataSource" ref="regionDS" />
        <property name="annotatedClasses">
            <list>
                <value>ru.galuzin.payment_system.common_types.Account</value>
                <value>ru.galuzin.payment_system.common_types.Operation</value>
                <value>ru.galuzin.payment_system.common_types.Person</value>
                <value>ru.galuzin.payment_system.common_types.Terminal</value>
            </list>
        </property>
        <property name="hibernateProperties">
            <value>
                hibernate.dialect=org.hibernate.dialect.PostgreSQL94Dialect
                hibernate.show_sql=true
            </value>
        </property>
    </bean>

    <bean name="txManager" class="org.springframework.orm.hibernate5.HibernateTransactionManager">
        <property name="sessionFactory" ref="sessionFactory" />
    </bean>

    <bean name="hibernateTemplate" class="org.springframework.orm.hibernate5.HibernateTemplate">
        <property name="sessionFactory" ref="sessionFactory" />
    </bean>

</beans>