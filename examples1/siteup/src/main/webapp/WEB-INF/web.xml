<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
    <display-name>Web Application</display-name>

    <listener>
        <listener-class>ru.rearitem.listeners.ServletContextListener</listener-class>
    </listener>

    <filter>
        <filter-name>adminFilter</filter-name>
        <filter-class>ru.rearitem.filters.AdminFilter</filter-class>
        <init-param>
            <param-name>role</param-name>
            <param-value>ADMIN</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>adminFilter</filter-name>
        <url-pattern>/api/admin/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>userFilter</filter-name>
        <filter-class>ru.rearitem.filters.AdminFilter</filter-class>
        <init-param>
            <param-name>role</param-name>
            <param-value>USER</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>adminFilter</filter-name>
        <url-pattern>/api/user/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>riservlet</servlet-name>
        <servlet-class>ru.rearitem.servlets.RIServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>riservlet</servlet-name>
        <url-pattern>/api/admin/info</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getproduct</servlet-name>
        <servlet-class>ru.rearitem.servlets.RIGetProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getproduct</servlet-name>
        <url-pattern>/api/product/get</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>auth</servlet-name>
        <servlet-class>ru.rearitem.servlets.AuthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>auth</servlet-name>
        <url-pattern>/api/auth</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>ru.rearitem.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/api/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>account</servlet-name>
        <servlet-class>ru.rearitem.servlets.CreateAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>account</servlet-name>
        <url-pattern>/api/account</url-pattern>
    </servlet-mapping>

    <!--<welcome-file-list>-->
        <!--<welcome-file>common/index.html</welcome-file>-->
    <!--</welcome-file-list>-->
</web-app>